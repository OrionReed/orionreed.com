{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
    "formatter": {
      "semicolons": "asNeeded",
			"quoteStyle": "single"
    }
  },
	"formatter": {
		"enabled": true,
		"indentStyle":"space"
	},
	"files": {
    "ignore": ["src/parsers/*"]
  }
}
