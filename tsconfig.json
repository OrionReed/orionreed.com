{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"baseUrl": ".",
		"types": ["vite/client"],
		"paths": {
      "@/*": ["src/*"]
    },
	},
	"include": ["node_modules/vite/client.d.ts", "**/*"]
}
